<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayNameProfileSection"
                android:layout_below="@+id/profilePic"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_profile"
                android:background="@drawable/profilepicture"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_show_full_name"
                android:layout_alignStart="@+id/ic_profile"
                android:hint="@string/loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_show_full_name"
                android:background="@color/grey_font"
                android:id="@+id/divider_name"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_email"
                android:background="@drawable/ic_email"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_show_email"
                android:layout_alignStart="@+id/ic_profile"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/divider_email"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_show_email"
                android:background="@color/grey_font"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_phone"
                android:background="@drawable/ic_phone"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_show_phone"
                android:layout_alignStart="@+id/ic_profile"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/divider_phone"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_show_phone"
                android:background="@color/grey_font"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_gender"
                android:background="@drawable/ic_gender"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_show_gender"
                android:layout_alignStart="@+id/ic_gender"
                android:layout_below="@+id/divider_phone"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/divider_gender"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_show_phone"
                android:background="@color/grey_font"/>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>